<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        tools:context=".PlanetInfoActivity">

    <ImageView
            android:layout_width="319dp"
            android:layout_height="293dp" app:srcCompat="@drawable/img_earth"
            android:id="@+id/planetImageInfoId"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="42dp" android:layout_marginRight="42dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="42dp"
            android:layout_marginStart="42dp" app:layout_constraintHorizontal_bias="0.6"/>
    <TextView
            android:text="Earth"
            android:gravity="center"
            android:layout_width="311dp"
            android:layout_height="45dp"
            android:id="@+id/planetNameInfoId" android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="48dp" android:layout_marginStart="48dp"
            android:textColor="@android:color/background_light" android:textStyle="bold"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/planetImageInfoId" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="48dp" android:layout_marginRight="48dp"/>

    <ScrollView
            android:layout_width="323dp"
            android:layout_height="211dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="42dp"
            android:layout_marginStart="42dp"
            android:layout_marginBottom="42dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="42dp" android:layout_marginRight="42dp">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <TextView
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/planetInfoId"
                    android:textColor="@android:color/background_light" android:textSize="18sp"
                    tools:layout_editor_absoluteY="44dp" tools:layout_editor_absoluteX="47dp"
                    android:text="Information of the planet..."/>
        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>