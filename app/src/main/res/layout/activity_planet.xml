<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        tools:context=".PlanetActivity">

    <ImageView
            android:layout_width="319dp"
            android:layout_height="293dp" app:srcCompat="@drawable/img_earth"
            android:id="@+id/planetImageId"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="42dp" android:layout_marginRight="42dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="42dp"
            android:layout_marginStart="42dp" app:layout_constraintHorizontal_bias="0.6"/>
    <TextView
            android:text="Earth"
            android:gravity="center"
            android:layout_width="311dp"
            android:layout_height="45dp"
            android:id="@+id/planetNameId" android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="48dp" android:layout_marginStart="48dp"
            android:textColor="@android:color/background_light" android:textStyle="bold"
            android:fontFamily="sans-serif-smallcaps"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/planetImageId"/>
    <TextView
            android:gravity="center"
            android:layout_width="315dp"
            android:layout_height="49dp"
            android:id="@+id/showResultId"
            android:textColor="@android:color/background_light" android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="46dp" android:layout_marginRight="46dp" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="46dp"
            android:layout_marginStart="46dp" android:text="Resultant weight..."/>
    <Button
            android:text="@string/show_weight"
            android:layout_width="323dp"
            android:layout_height="47dp"
            android:background="@drawable/round_edge_button"
            android:id="@+id/showWeightId" android:textStyle="bold"
            android:textSize="14sp" android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="42dp"
            android:layout_marginRight="42dp"
            app:layout_constraintBottom_toTopOf="@+id/showResultId"
            android:layout_marginBottom="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="42dp"
            android:layout_marginStart="42dp"/>
    <EditText
            android:layout_width="235dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:textColorHint="@color/colorGray"
            android:ems="10"
            android:id="@+id/enterWeightId"
            android:hint="@string/enter_weight"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/planetNameId"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="86dp"
            android:layout_marginStart="86dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="86dp"
            android:layout_marginRight="86dp"/>
</android.support.constraint.ConstraintLayout>